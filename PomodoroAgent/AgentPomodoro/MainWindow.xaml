<Window x:Class="AgentPomodoro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:AgentPomodoro.Converters"
        Title="AgentRévision"
        Topmost="True"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="False"
        Background="#222"
        MouseEnter="Window_MouseEnter"
        MouseLeave="Window_MouseLeave">

    <Window.Resources>
        <conv:BoolToSizeConverter x:Key="WidthConverter" ReducedSize="100" FullSize="600"/>
        <conv:BoolToSizeConverter x:Key="HeightConverter" ReducedSize="100" FullSize="600"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conv:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>

    </Window.Resources>

    <Window.Style>
        <Style TargetType="Window">
            <Setter Property="Width" Value="{Binding IsReduced, Converter={StaticResource WidthConverter}}"/>
            <Setter Property="Height" Value="{Binding IsReduced, Converter={StaticResource HeightConverter}}"/>
        </Style>
    </Window.Style>

    <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Background="#222">
        <Grid>
            <StackPanel x:Name="MainPanel" Visibility="{Binding IsReduced, Converter={StaticResource BoolToVisibilityConverter}}">

                <!-- Menu -->
                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                    <Button Content="🏠 Home" Width="80" Margin="2"/>
                    <Button Content="📊 Stats" Width="80" Margin="2"/>
                    <Button Content="⚙ Settings" Width="80" Margin="2"/>
                    <Button x:Name="BtnImportPlugin"
            Content="Importer un plugin"
            Width="80"
            Margin="2"
            Click="BtnImportPlugin_Click"/>

                </StackPanel>
                <StackPanel x:Name="MainView" Orientation="Vertical" Background="LightGray"/>

            
            


            </StackPanel>
            <StackPanel x:Name="ReducePanel" Visibility="{Binding IsReduced, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                <TextBlock Text="22:22" 
                    Foreground="White" 
                    FontSize="24" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

